<% layout("/layouts/boilerplate.ejs") %>
<body>
  <h1>Welcome to the BookShelf</h1>
  <div class="card my-5 mb-3" style="max-width: 1100px">
    <div class="row g-0">
      <div class="col-md-4">
        <img
          src="<%= book.image %>"
          class="img-fluid img-thumbnail rounded-start card-image"
          alt="Book image"
        />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title fs-2">Title : <%= book.title %></h5>
          <p class="card-text fs-3">Author : "<%= book.author %>"</p>
          <p class="card-text fs-4">Price : &#x20B9; <%= book.price %>.00</p>
          <p class="card-text">
            <small class="card-text">Genre : <%= book.genre %></small>
          </p>
          <form action="/cart" method="post">
            <input type="hidden" name="id" value="<%= book.id %>" />
            <button class="btn cart-btn" type="submit">Add to cart</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
