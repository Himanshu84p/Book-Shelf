<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="center">
    <h1 class="heading">Edit Details</h1>
    <form action="/edit?_method=PUT" method="post">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="username"
          name="username"
          class="form-control w-75 m-auto"
          value="<%= user.username %>"
          id="username"
          placeholder="Username"
          required
          readonly
        />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input
          type="email"
          name="email"
          class="form-control w-75 m-auto"
          value="<%= user.email %>"
          id="email"
          placeholder="E-mail"
          required
        />
      </div>
      <div class="mb-3">
        <label for="fullName" class="form-label">Full Name</label>
        <input
          type="text"
          name="fullName"
          class="form-control w-75 m-auto"
          value="<%= user.fullName %>"
          id="fullName"
          placeholder="Full Name"
          required
        />
      </div>
      <div class="mb-3">
        <label for="phone" class="form-label">Phone Number</label>
        <input
          type="phone"
          name="phone"
          class="form-control w-75 m-auto"
          value="<%= user.phone %>"
          id="phone"
          placeholder="Phone Number"
          required
        />
      </div>
      <div class="mb-3">
        <label for="address" class="form-label">Address</label>
        <input
          type="address"
          name="address"
          class="form-control w-75 m-auto"
          value="<%= user.address %>"
          id="address"
          placeholder="Address"
          required
        />
      </div>
      <div class="mb-3">
        <label for="currentPassword" class="form-label">Current Password</label>
        <input
          type="password"
          name="currentPassword"
          class="form-control w-75 m-auto"
          id="currentPassword"
          placeholder="Current Password"
          required
        />
      </div>
      <div class="mb-3">
        <label for="newPassword" class="form-label">New Password</label>
        <input
          type="password"
          name="newPassword"
          class="form-control w-75 m-auto"
          id="newPassword"
          placeholder="New Password"
          required
        />
      </div>
      <button type="submit" class="btn btn-primary m-auto">Edit</button>
    </form>
  </div>
</body>
