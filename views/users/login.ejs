<% layout("/layouts/boilerplate.ejs") %>
<body class="login-main-body">
  <div class="login-container">

  
  <div class="center login-div">
    <h1 class="heading">Login</h1>
    <form action="/login" method="post">
      <div class="mb-3 mt-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          class="form-control w-50 m-auto"
          id="username"
          placeholder="Username"
          required
        />
      </div>
      <!-- <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          class="form-control w-50 m-auto"
          id="password"
          placeholder="Password"
          required
        />
      </div> -->
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <div class="input-group w-50 m-auto">
          <input
            type="password"
            name="password"
            value="<%= signupFormData ? signupFormData.password : '' %>"
            class="form-control w-50"
            id="password"
            placeholder="Password"
            required
          />
          <button class="btn btn-outline-secondary togglePassword" type="button" ><i class="fa-solid fa-eye-slash"></i></button>
        </div>
        
      </div>
      <button type="submit" class="btn btn-primary mb-3 mt-3">Login</button>
    </form>
  </div>
</div>
<script src="/javascript/password.js"></script>
</body>
