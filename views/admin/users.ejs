<% layout("/layouts/boilerplate.ejs") %>

<body>
  <h2>All users</h2>
  <p class="medium-heading">Total number of Users : <%= totalUsers %></p>
  <table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <%for(user of allUsers) {%> <%if(user.username != "admin"){%>
      <tr>
        <td>
          <div class="d-flex align-items-center">
            <img
              src="https://t4.ftcdn.net/jpg/02/29/75/83/360_F_229758328_7x8jwCwjtBMmC6rgFzLFhZoEpLobB6L8.jpg"
              alt=""
              style="width: 45px; height: 45px"
              class="rounded-circle"
            />
            <div class="ms-3">
              <p class="fw-bold mb-1"><%= user.username %></p>
              <p class="text-muted mb-0"><%= user.email %></p>
            </div>
          </div>
        </td>
        <td>
          <span class="badge badge-success rounded-pill d-inline">Active</span>
        </td>
        <td>
          <form
            action="/admin/user/<%= user._id  %>?_method=DELETE"
            method="POST"
          >
            <button
              type="submit"
              class="btn btn-danger btn-outline btn-sm btn-rounded"
            >
              Delete
            </button>
          </form>
        </td>
      </tr>
      <%}%> <%}%>
    </tbody>
  </table>
</body>
